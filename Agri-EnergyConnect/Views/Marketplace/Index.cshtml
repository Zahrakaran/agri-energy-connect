@model List<Agri_EnergyConnect.Models.Product>

@{
    ViewData["Title"] = "Marketplace";
}

<div class="container my-5">
    <h2 class="mb-4 text-center">Marketplace</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            No products found in the marketplace.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-truncate" style="max-height: 4.5rem;">
                                @product.Description
                            </p>
                            <p class="text-muted mb-1">Category: @product.Category</p>
                            <p class="mb-2"><small>Produced on: @product.ProductionDate.ToString("yyyy-MM-dd")</small></p>
                            <div class="mt-auto">
                                <p class="fw-bold text-success fs-5">
                                    @product.Price.ToString("C")
                                </p>
                                <!-- You can link to a details page if you want -->
                                <a href="#" class="btn btn-primary btn-sm w-100">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
