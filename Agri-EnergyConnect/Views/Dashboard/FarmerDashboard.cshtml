@model Agri_EnergyConnect.Models.Farmer

<h2>Welcome, @Model.FullName</h2>

<p>Location: @Model.Location</p>
<p>Email: @Model.Email</p>

<h3>Your Products</h3>
@if (Model.Products != null && Model.Products.Any())
{
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>@product.Name - @product.Price.ToString("R")</li>
        }
    </ul>
}
else
{
    <p>You have no products listed.</p>
}
