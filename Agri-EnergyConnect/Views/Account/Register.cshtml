@model Agri_EnergyConnect.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="page-background"></div>

<div class="form-container">
<h2>Register</h2>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div>
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="@(new SelectList(new[] { "Farmer", "Employee" }))">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="Role"></span>
    </div>

    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>

        <div class="form-group">
            <label asp-for="ContactNumber"></label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>

    <div>
        <label asp-for="Position">Employee Position (Optional)</label>
        <input asp-for="Position" />
        <span asp-validation-for="Position"></span>
    </div>

    <button type="submit">Register</button>
</form>
</div>