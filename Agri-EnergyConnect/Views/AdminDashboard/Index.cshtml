@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">AgriConnect</a>
    </div>
</nav>

<!-- Header -->
<div class="header-section">
    <h1>Welcome to Your Dashboard</h1>
    <p class="lead">Access all your tools and profile in one place.</p>
</div>

<!-- Dashboard Cards -->
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Profile", "Account")" class="dashboard-card">
                <i class="bi bi-person-circle display-4"></i>
                <h5 class="mt-3">View Profile</h5>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Index", "Marketplace")" class="dashboard-card">
                <i class="bi bi-shop display-4"></i>
                <h5 class="mt-3">Marketplace</h5>
            </a>
        </div>
        <div class="col-md-4 mb-4">
            <a href="@Url.Action("Index", "Collaboration")" class="dashboard-card">
                <i class="bi bi-people display-4"></i>
                <h5 class="mt-3">Collaboration Space</h5>
            </a>
        </div>
    </div>
</div>

<!-- Footer -->
